    link(rel="stylesheet", type="text/css", href="/addSubject/css/util.css")
    link(rel="stylesheet", type="text/css", href="/addSubject/css/main.css")
    link(rel="stylesheet", href="/css/pageStyle.css")
  body
    .limiter
      .container-login100
        .wrap-login100
          .login100-pic.js-tilt(data-tilt="")
            img(src="/images/signin-image.jpg", alt="IMG")
          form#add_form.login100-form.validate-form
            span.login100-form-title Add Subject
            .wrap-input100.validate-input(data-validate="Enter valid Subject Name")
              input#name.input100(type="text", name="subject", placeholder="Enter Subject name")
              span.focus-input100
              span.symbol-input100
                i.fa.fa-envelope(aria-hidden="true")
            .wrap-input100.validate-input(data-validate="Total lectures is required")
              input#email.input100(type="number", name="totalNumLecture", placeholder="lectures")
              span.focus-input100
              span.symbol-input100
                i.fa.fa-lock(aria-hidden="true")
            .container-login100-form-btn
              button.login100-form-btn Add Subject
            .text-center.p-t-12
              span.txt1 Already
              a.txt2(href="#") Added Subject / Go Back?
            .text-center.p-t-136
              a.txt2(href="/subjectsOverview") Subject Overview
                i.fa.fa-long-arrow-right.m-l-5(aria-hidden="true")



  script(src="/addSubject/vendor/jquery/jquery-3.2.1.min.js")
