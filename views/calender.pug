doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Attendance Records
        link(href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700,800,900", rel="stylesheet")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css")

        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css')

        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css")
        link(rel="stylesheet", href="/css/calender.css")
        link(rel="stylesheet", href="/css/bar.css")


    body
    .container
    .row
        .col-md-12(style="padding-right:0px")
            .card.pt-5.px-3(style="width:100%")
                .progress
                    - const present = Math.round((subjects.attendancePercent * subjects.attendanceRecords.length)/100)
                    - const dayPassedPercent = Math.round((subjects.attendanceRecords.length / subjects.totalNumLecture)*100)
                    .progress-bar(role='progressbar', style=`width: ${dayPassedPercent}%`, aria-valuenow='50', aria-valuemin='0', aria-valuemax='100')
                .mt-3.data
                    span.text1.animate-charcter
                        =` ${present} present `
                    span.text1.animate-charcter
                        =`Lecture Remaining ${subjects.totalNumLecture-subjects.attendanceRecords.length}`
                    span.text1.animate-charcter
                        = `Total Lecture : ${subjects.totalNumLecture}`

        div.cal-modal-container
            div.cal-modal
                h3 Present Attendance Records
                #calendar
                    div.placeholder
                    div.calendar-events
        div.cal-modal-container
            div.cal-modal
                h3 Absent Attendance Records
                #calendar1
                    div.placeholder
                    div.calendar-events

        script. 
            var subjectData = !{JSON.stringify(subjectData)}
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://cdn.jsdelivr.net/npm/flatpickr")
        script(src="/js/calender.js")
