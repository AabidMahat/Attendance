header.header
  nav.nav.nav--tours
    a.nav__el(href='/subjectsOverview') All Subject
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if student
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/account')
        img.nav__user-img(src=`/img/users/${student.photo}` alt=`Photo of ${student.name}`)
        span= student.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta.signUp(href='/signUp') Sign up
        
